# {{ ansible_managed }}

[sshd]
{% if fail2ban_enable_sshd %}
enabled           = true
{% else %}
enabled           = false
{% endif %}
{% if development and vagrant %}
# The production port would be: {{ sshd_config_port }}
port              = 22
{% else %}
port              = {{ sshd_config_port }}
{% endif %}
# bantime           = 10m
bantime.increment = true
bantime.factor    = 1
bantime.maxtime   = 5w
# findtime          = 10m
# maxretry          = 5
mode              = {{ fail2ban_sshd_mode }}
